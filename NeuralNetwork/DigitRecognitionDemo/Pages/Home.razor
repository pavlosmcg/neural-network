@page "/"
@inject IJSRuntime JSRuntime
@inject HttpClient HttpClient

<PageTitle>Digit Recognition Demo</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4">Digit Recognition Demo</h1>
            <p class="lead">Neural Network powered handwritten digit recognition</p>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Draw a Digit</h3>
                    <div class="text-center">
                        <canvas @ref="drawingCanvas" 
                                id="drawingCanvas" 
                                width="280" 
                                height="280" 
                                class="border rounded bg-white mx-auto d-block"
                                style="cursor: crosshair; touch-action: none;">
                        </canvas>
                        <div class="mt-3">
                            <button class="btn btn-primary me-2" @onclick="RecognizeDigit" disabled="@(isProcessing)">
                                @if (isProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Processing...</span>
                                }
                                else
                                {
                                    <span>Recognize</span>
                                }
                            </button>
                            <button class="btn btn-secondary" @onclick="ClearCanvas" disabled="@(isProcessing)">Clear</button>
                        </div>
                        @if (isNetworkLoading)
                        {
                            <div class="alert alert-warning mt-3">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                Loading neural network...
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(resultMessage))
                        {
                            <div class="alert alert-info mt-3">
                                @resultMessage
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3 text-center">
            <h4>About</h4>
            <p>This application uses a neural network to recognize handwritten digits (0-9). The neural network has been trained on the MNIST dataset.</p>
        </div>
    </div>
</div>
