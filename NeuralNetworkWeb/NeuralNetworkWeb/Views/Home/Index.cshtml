<canvas id="myCanvas" width="28" height="28" style="border-style: solid"></canvas>
<button type="button" onclick="uploadImage()">Submit</button>
<button type="button" onclick="clearCanvas()">Clear</button>
<h2 id="message"></h2>
<script type="text/javascript">
    $(function () {
        $('#myCanvas').sketch({ defaultSize: 2 });
    });
    document.uploadImage = function () {
        var imageData = document.getElementById('myCanvas').toDataURL('image/png');
        $.post('/home/upload', { base64Image: imageData }).done(function (data) { $('#message').text(data); });
    };
    document.clearCanvas = function() {
        location.reload();
    };
</script>
